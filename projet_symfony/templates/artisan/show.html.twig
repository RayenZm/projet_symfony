{% extends 'base.html.twig' %}

{% block title %}Artisan{% endblock %}

{% block body %}
    <h1>Artisan</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artisan.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ artisan.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ artisan.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ artisan.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ artisan.adresse }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ artisan.password }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ artisan.telephone }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ artisan.roles ? artisan.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ artisan.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EtatCompte</th>
                <td>{{ artisan.etatCompte ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TypeProduit</th>
                <td>{{ artisan.typeProduit }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artisan_index') }}">back to list</a>

    <a href="{{ path('app_artisan_edit', {'id': artisan.id}) }}">edit</a>

